{
  "formatter": "language_server",
  "format_on_save": "on",
  "language_servers": [
    "!eslint",
    "!oxlint",
    "!oxfmt",
    "!vtsls",
    "..."
  ],
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "YAML": {
      "tab_size": 2,
      "hard_tabs": false
    }
  },
  "lsp": {
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "preferences": {
            "includePackageJsonAutoImports": "on"
          },
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        },
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        },
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          }
        }
      }
    }
  }
}
